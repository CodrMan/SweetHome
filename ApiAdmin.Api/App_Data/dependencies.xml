<?xml version="1.0" encoding="utf-8" ?>
<autofac-dependencies>

  <components>
    
    <!-- DBContext -->

    <component
      service="ApiAdmin.Data.DataDbContext, ApiAdmin.Data"
      type="ApiAdmin.Data.DataDbContext, ApiAdmin.Data"
      instance-scope="per-lifetime-scope"/>
    
    <!-- Repositories -->

    <component
      service="ApiAdmin.Core.Interfaces.ISettingRepository, ApiAdmin.Core"
      type="ApiAdmin.Data.Repositories.SettingRepository, ApiAdmin.Data"
      instance-scope="per-lifetime-scope"/>

    <component
      service="ApiAdmin.Core.Interfaces.IMessageRepository, ApiAdmin.Core"
      type="ApiAdmin.Data.Repositories.MessageRepository, ApiAdmin.Data"
      instance-scope="per-lifetime-scope"/>

    <!-- Services -->

    <component
      service="ApiAdmin.Services.Abstract.ISettingService, ApiAdmin.Services"
      type="ApiAdmin.Services.Concrete.SettingService, ApiAdmin.Services"
      instance-scope="per-lifetime-scope"/>

    <component
      service="ApiAdmin.Services.Abstract.IMessageService, ApiAdmin.Services"
      type="ApiAdmin.Services.Concrete.MessageService, ApiAdmin.Services"
      instance-scope="per-lifetime-scope"/>
    
    <!-- Managers -->

    <component
      service="ApiAdmin.Services.Concrete.AppUserManager, ApiAdmin.Services"
      type="ApiAdmin.Services.Concrete.AppUserManager, ApiAdmin.Services"
      instance-scope="per-lifetime-scope"/>

    <component
      service="ApiAdmin.Services.Concrete.AppRoleManager, ApiAdmin.Services"
      type="ApiAdmin.Services.Concrete.AppRoleManager, ApiAdmin.Services"
      instance-scope="per-lifetime-scope"/>
    
    <!-- Stores -->

    <component
      service="ApiAdmin.Data.Identity.AppUserStore, ApiAdmin.Data"
      type="ApiAdmin.Data.Identity.AppUserStore, ApiAdmin.Data"
      instance-scope="per-lifetime-scope"/>

    <component
      service="ApiAdmin.Data.Identity.AppRoleStore, ApiAdmin.Data"
      type="ApiAdmin.Data.Identity.AppRoleStore, ApiAdmin.Data"
      instance-scope="per-lifetime-scope"/>
    
    <!-- Reflector -->

    <component
      service="ApiAdmin.Core.Reflection.ISettingsReflector, ApiAdmin.Core"
      type="ApiAdmin.Core.Reflection.SettingsReflector, ApiAdmin.Core"
      instance-scope="per-lifetime-scope"/>
      
  </components>

</autofac-dependencies>
